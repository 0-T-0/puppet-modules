<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>package</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>

        <fileSet>
            <directory>${project.basedir}/templates/</directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/templates/</outputDirectory>
            <includes>
                <include>**/*.erb</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/manifests/</directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/manifests/</outputDirectory>
            <includes>
                <include>**/*.pp</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/files</directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/files/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>**/*.zip</exclude>
                <exclude>**/*.jar</exclude>
                <exclude>**/*.tar.gz</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/../hiera/hieradata</directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/hiera/hieradata</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>**/wso2/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>metadata.json</source>
            <outputDirectory>${pom.artifactId}-${pom.version}/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../hiera/hiera.yaml</source>
            <outputDirectory>${pom.artifactId}-${pom.version}/hiera/hieradata/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../hiera/hieradata/dev/wso2/common.yaml</source>
            <outputDirectory>${pom.artifactId}-${pom.version}/hiera/hieradata/dev/wso2/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../hiera/hieradata/dev/common.yaml</source>
            <outputDirectory>${pom.artifactId}-${pom.version}/hiera/hieradata/dev/</outputDirectory>
        </file>
    </files>
</assembly>