# Load Average
define service {
    use                 generic-service
    host_name           <%= @fqdn %>
    service_description LOAD AVERAGE
    check_command       check_nrpe_1arg!check_load
}

# Disk Usage
define service {
    use                 generic-service
    host_name           <%= @fqdn %>
    service_description DISK USAGE
    check_command       check_nrpe!check_all_disks!10%!5%
}

# Procs
define service{
